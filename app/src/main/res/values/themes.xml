<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FilmApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grey_dark_800</item>
        <item name="colorPrimaryVariant">@color/grey_dark_800</item>
        <item name="colorOnPrimary">@color/grey_light</item>
        <item name="colorOnSecondary">@color/grey_light</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.FilmApp</item>
    </style>

</resources>